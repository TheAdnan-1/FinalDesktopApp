<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane prefWidth="900" prefHeight="600"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.theadnan.HomeController">
    <VBox alignment="CENTER" spacing="18" layoutX="150" layoutY="60" prefWidth="600">
        <Label text="Utility Desktop Application" style="-fx-font-size: 28px; -fx-font-weight: bold;" />
        <HBox spacing="12" alignment="CENTER">
            <Button text="Currency Converter" onAction="#openCurrency" />
            <Button text="Weather" onAction="#openWeather" />
            <Button text="Login" onAction="#openLogin" />
            <Button text="Register" onAction="#openRegister" />
        </HBox>
        <HBox spacing="12" alignment="CENTER">
            <Button text="Toggle Theme" onAction="#toggleTheme" />
            <Button text="Exit" onAction="#exitApp" />
        </HBox>
    </VBox>
</AnchorPane>