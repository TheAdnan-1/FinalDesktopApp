<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane prefWidth="800" prefHeight="500"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.theadnan.CurrencyController">
    <VBox alignment="CENTER" spacing="12" layoutX="120" layoutY="40">
        <Label text="Currency Converter" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <TextField fx:id="amountField" promptText="Amount"/>
        <HBox spacing="8">
            <ComboBox fx:id="fromCurrency" prefWidth="140"/>
            <ComboBox fx:id="toCurrency" prefWidth="140"/>
        </HBox>
        <Button text="Convert" onAction="#convertCurrency"/>
        <Label fx:id="resultLabel"/>
        <HBox spacing="10">
            <Button text="Back" onAction="#goBack"/>
        </HBox>
    </VBox>
</AnchorPane>