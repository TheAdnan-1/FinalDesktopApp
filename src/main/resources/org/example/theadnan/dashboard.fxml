<AnchorPane prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.theadnan.DashboardController">
    <Label fx:id="info" layoutX="200.0" layoutY="20.0" style="-fx-font-size: 14px;" />
    <Button layoutX="362.0" layoutY="581.0" onAction="#openNotes" text="My Notes" />
