    <Button layoutX="487.0" layoutY="581.0" onAction="#logout" text="Logout" />
    <!-- rest unchanged -->
    <Label layoutX="50" layoutY="140" style="-fx-font-weight: bold;" text="Update Balance" />
    <Label layoutX="50" layoutY="170" text="Email:" />
    <TextField fx:id="balanceEmail" layoutX="110" layoutY="166" prefHeight="25.0" prefWidth="183.0" />
    <Label layoutX="314.0" layoutY="170.0" text="Password:" />
    <PasswordField fx:id="balancePassword" layoutX="381.0" layoutY="166.0" prefWidth="160" />
    <Label layoutX="50" layoutY="200" text="Amount:" />
    <TextField fx:id="balanceAmount" layoutX="110" layoutY="196" prefWidth="120" promptText="e.g., 10.50" />
    <Button layoutX="250" layoutY="196" onAction="#addBalance" text="Add" />
    <Button layoutX="300" layoutY="196" onAction="#deductBalance" text="Deduct" />

