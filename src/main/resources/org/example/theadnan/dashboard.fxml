    <Button layoutX="50" layoutY="530" onAction="#acceptSelectedRequest" text="Accept" />
    <Button layoutX="120" layoutY="530" onAction="#cancelSelectedRequest" text="Cancel" />

    <Label layoutX="595.0" layoutY="40.0" style="-fx-font-weight: bold;" text="Report User" />
    <Label layoutX="594.0" layoutY="71.0" text="Target Email:" />
    <TextField fx:id="reportTargetEmail" layoutX="674.0" layoutY="67.0" prefWidth="190" />
    <Label layoutX="594.0" layoutY="96.0" text="Message:" />
    <TextArea fx:id="reportMessageArea" layoutX="674.0" layoutY="102.0" prefHeight="110" prefWidth="190" />
    <Button layoutX="728.0" layoutY="234.0" onAction="#sendReport" text="Send Report" />

    <Label fx:id="statusLabel" layoutX="250" layoutY="530" style="-fx-text-fill: red;" />
   <Label layoutX="420.0" layoutY="611.0" />
