<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="org.example.theadnan.WeatherController">

    <VBox alignment="TOP_CENTER" layoutX="60" layoutY="40" prefWidth="680" spacing="12">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Weather" />

        <HBox alignment="CENTER" spacing="8">
            <TextField fx:id="cityField" prefWidth="320" />
            <Button fx:id="fetchButton" onAction="#fetchWeather" text="Get Weather" />
        </HBox>

        <VBox alignment="CENTER" prefWidth="480" spacing="6" styleClass="card">
            <Label fx:id="locationLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Location" />
            <Label fx:id="tempLabel" style="-fx-font-size: 36px; -fx-font-weight: bold;" text="-- Â°C" />
            <Label fx:id="condLabel" text="Condition" />
            <Label fx:id="windLabel" text="Wind: -- km/h" />
        </VBox>

        <Label fx:id="statusLabel" textFill="red" />

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="backButton" onAction="#goBack" text="Back" />
        </HBox>
    </VBox>
   <Label layoutX="648.0" layoutY="468.0" text="Developed by 2207001" />
</AnchorPane>
