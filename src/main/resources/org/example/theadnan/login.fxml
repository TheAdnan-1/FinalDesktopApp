<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefWidth="600" prefHeight="400"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.theadnan.LoginController">


    <TextField fx:id="email" layoutX="200" layoutY="120" promptText="Email"/>
    <PasswordField fx:id="password" layoutX="200" layoutY="170" promptText="Password"/>

    <Button text="Login" layoutX="250" layoutY="230"
            onAction="#loginUser"/>

    <Label fx:id="status" layoutX="200" layoutY="280"/>

</AnchorPane>

