<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane prefWidth="800" prefHeight="500"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.theadnan.LoginController">
    <VBox alignment="CENTER" spacing="12" layoutX="200" layoutY="80">
        <Label text="Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <TextField fx:id="email" promptText="Email" />
        <PasswordField fx:id="password" promptText="Password"/>
        <HBox spacing="10" alignment="CENTER">
            <Button text="Login" onAction="#loginUser"/>
            <Button text="Back" onAction="#goBack"/>
        </HBox>
        <Label fx:id="status" textFill="red"/>
    </VBox>
</AnchorPane>