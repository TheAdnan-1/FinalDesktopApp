<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="900" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="org.example.theadnan.AdminController">

    <Label layoutX="20" layoutY="10" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Admin Panel - Reports" textFill="#ff3609" />

    <ListView fx:id="reportsList" layoutX="20" layoutY="50" prefHeight="480" prefWidth="420" />

    <Label layoutX="460" layoutY="50" style="-fx-font-weight: bold;" text="Report Details" textFill="#ff1100" />
    <Label layoutX="460" layoutY="80" text="Reporter:" />
    <TextField fx:id="reporterField" editable="false" layoutX="540" layoutY="76" prefWidth="320" />
    <Label layoutX="460" layoutY="110" text="Target:" />
    <TextField fx:id="targetField" editable="false" layoutX="540" layoutY="106" prefWidth="320" />
    <Label layoutX="460" layoutY="140" prefWidth="72.0" text="Allegations:" />
    <TextArea fx:id="messageArea" editable="false" layoutX="540" layoutY="136" prefHeight="240" prefWidth="320" />

    <Label layoutX="460" layoutY="390" text="Status:" />
    <TextField fx:id="statusField" editable="false" layoutX="540" layoutY="386" prefWidth="160" />

    <Button layoutX="520" layoutY="430" onAction="#markReviewed" text="Mark Reviewed" />
    <Button layoutX="640" layoutY="430" onAction="#blockUser" text="Block User" />
    <Button layoutX="760" layoutY="430" onAction="#loadReports" text="Refresh" />

    <Label fx:id="adminStatus" layoutX="520" layoutY="470" style="-fx-text-fill: red;" />

    <Button layoutX="20" layoutY="550" onAction="#goBack" text="Back" />
</AnchorPane>
