<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="org.example.theadnan.RegisterController">

    <TextField fx:id="name" layoutX="300" layoutY="100" promptText="Name" />
    <TextField fx:id="email" layoutX="300" layoutY="140" promptText="Email" />
    <TextField fx:id="age" layoutX="300" layoutY="180" promptText="Age" />
    <TextField fx:id="profession" layoutX="300" layoutY="220" promptText="Profession" />
    <TextField fx:id="hobby" layoutX="300" layoutY="260" promptText="Hobby (Optional)" />
    <PasswordField fx:id="password" layoutX="300" layoutY="300" promptText="Password" />

    <Button layoutX="340" layoutY="350" onAction="#registerUser" text="Register" />

    <Label fx:id="status" layoutX="300" layoutY="400" />

</AnchorPane>
